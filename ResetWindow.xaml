<Window x:Class="AutoMuteUs_Portable.ResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoMuteUs_Portable"
        mc:Ignorable="d"
        Title="Reset" SizeToContent="WidthAndHeight" Closed="Window_Closed" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
             <RowDefinition />
             <RowDefinition />
         </Grid.RowDefinitions>
            
        <Button HorizontalAlignment="Stretch" Margin="0,0,0,5" Click="ResetAllProperties">RESET ALL PROPERTIES</Button>
        <Button HorizontalAlignment="Stretch" Grid.Row="1" Margin="0,5,0,0" Click="DeleteAllBinaries">DELETE ALL BINARIES</Button>
    </Grid>
</Window>
